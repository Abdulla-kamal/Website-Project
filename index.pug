doctype
html
 head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  title Home
  //-Include Styles And Fonts
  include includes-pug/styles.pug
 body(dir = "rtl")
  //-Include Settings Section
  include includes-pug/settings.pug

  //-Start Main Page
  .main-page
   //-Includ Header Section
   include includes-pug/header
   //-Start Sections Sections
   .sections
    .container
     ul
      li(class = "active"): a(href="index.html" target="_self") الصفحة الرئيسية
      li: a(href="about.html" target="_self") ABOUT US
      li: a(href="employees.html" target="_self") EMPLOYEES
      li: a(href="contact.html" target="_self") CONTACT
    
   //-Start Search Sectoin
   .search
    .search-box
     input(type="text")
     button بحث
    .employees
     -for(let i = 0; i < 5; i++)
      .box
       .icon
        i(class = "fa-solid fa-folder-open")
       h3
  //-Start Overlay
  .overlay

  //-Start Profile Card
  .profile
   span.close
   .info
    span.name Abdulla Kamal
   .data-search
    input(type="text")
    button بحث
   .data-content
    -for(let i = 0; i < 4; i++)
     span.file: i(class = "fa-solid fa-file")
  //-Start Script Tag
  script(src="js/main.js")